<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingTop="10dp"
        android:paddingEnd="8dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="4dp">

        <TextView
            android:id="@+id/card_recipe_details_item_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxWidth="160dp"
            android:maxLines="1"
            android:theme="@style/IndespensaHeading5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="500g" />

        <TextView
            android:id="@+id/card_recipe_details_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:ellipsize="end"
            android:maxWidth="240dp"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:theme="@style/IndespensaText"
            app:layout_constraintBottom_toBottomOf="@+id/card_recipe_details_item_amount"
            app:layout_constraintStart_toEndOf="@+id/card_recipe_details_item_amount"
            app:layout_constraintTop_toTopOf="@+id/card_recipe_details_item_amount"
            tools:text="Arroz" />

        <ImageView
            android:id="@+id/card_recipe_details_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="TODO"
            android:src="@drawable/ic_check"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_gravity="bottom"
        android:background="#F1F1F1" />
</androidx.cardview.widget.CardView>
