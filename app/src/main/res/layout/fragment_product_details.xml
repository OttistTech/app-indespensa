<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/white">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/product_details_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <ImageButton
                android:id="@+id/product_details_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow"
                android:elevation="2dp"
                android:outlineProvider="none"
                android:backgroundTint="@color/transparent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/margin_2"
                android:layout_marginStart="@dimen/margin_2"/>
            <ImageView
                android:id="@+id/product_details_image"
                android:layout_width="0dp"
                android:layout_height="@dimen/image_size_big"
                android:scaleType="centerCrop"
                tools:src="@drawable/image_alternative"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
            <TextView
                android:id="@+id/product_details_food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/pill_white_backgroud"
                android:theme="@style/IndespensaHeading4"
                android:textColor="@color/secondary"
                tools:text="Comida"
                android:elevation="4dp"
                app:layout_constraintStart_toStartOf="@id/product_details_first_info"
                app:layout_constraintTop_toBottomOf="@id/product_details_image"
                android:layout_marginTop="-24dp" />
            <LinearLayout
                android:id="@+id/product_details_first_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/product_details_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginHorizontal="@dimen/margin_6">
                <TextView
                    android:id="@+id/product_details_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/IndespensaHeading1"
                    tools:text="Title"/>
                <TextView
                    android:id="@+id/product_details_brand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/IndespensaHeading4"
                    android:textColor="@color/gray"
                    tools:text="Title" />
                <TextView
                    android:id="@+id/product_details_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="80dp"
                    android:theme="@style/IndespensaText"
                    android:overScrollMode="always"
                    android:scrollbars="vertical"
                    android:fadeScrollbars="false"
                    tools:text="Descrição Descrição Descrição Descrição Descrição Descrição Descrição Descrição "
                    android:textColor="@color/gray"
                    android:layout_marginTop="@dimen/margin_2" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/product_details_second_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/product_details_first_info"
                app:layout_constraintStart_toStartOf="@id/product_details_first_info"
                app:layout_constraintEnd_toEndOf="@id/product_details_first_info"
                android:layout_marginTop="@dimen/margin_8">
                <LinearLayout
                    android:id="@+id/product_details_amount_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/product_details_amount_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/IndespensaHeading4"
                        tools:text="Quantidade:"/>
                    <TextView
                        android:id="@+id/product_details_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/IndespensaText"
                        android:layout_marginStart="@dimen/margin_1"
                        tools:text="4"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/product_details_product_amount_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/margin_1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/IndespensaHeading4"
                        android:text="@string/label_product_amount"/>
                    <TextView
                        android:id="@+id/product_details_product_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_1"
                        style="@style/IndespensaText"
                        tools:text="4kg"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/product_details_validity_date_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/margin_1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/IndespensaHeading4"
                        android:text="@string/label_validity_date"/>
                    <TextView
                        android:id="@+id/product_details_validity_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_1"
                        style="@style/IndespensaText"
                        tools:text="06/11/2007"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/product_details_was_opened_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/margin_1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/IndespensaHeading4"
                        android:textColor="@color/secondary"
                        android:text="Existe uma unidade aberta desse produto"/>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/product_details_amount_buttons"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="@id/product_details_second_info"
                app:layout_constraintEnd_toEndOf="@id/product_details_second_info"
                app:layout_constraintBottom_toTopOf="@id/product_details_add_to_button"
                android:layout_marginBottom="@dimen/margin_2">
                <Button
                    android:id="@+id/product_details_add_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/IndespensaButton.green"
                    android:layout_weight="1"
                    android:text="@string/cta_add_one"
                    android:layout_marginEnd="4dp" />
                <Button
                    android:id="@+id/product_details_remove_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/IndespensaButton.red"
                    android:layout_weight="1"
                    android:text="@string/cta_remove_one"
                    android:layout_marginStart="4dp" />
            </LinearLayout>
            <Button
                android:id="@+id/product_details_add_to_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/IndespensaButton.primary"
                android:layout_weight="1"
                tools:text="Adicionar"
                android:layout_marginBottom="@dimen/margin_2"
                app:layout_constraintStart_toStartOf="@id/product_details_amount_buttons"
                app:layout_constraintEnd_toEndOf="@id/product_details_amount_buttons"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <ProgressBar
            android:id="@+id/pantry_details_progressbar"
            android:layout_width="@dimen/progressbar_large"
            android:layout_height="@dimen/progressbar_large"
            android:indeterminateBehavior="repeat"
            android:indeterminateTint="@color/secondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>