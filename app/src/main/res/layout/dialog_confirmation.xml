<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:cardCornerRadius="16dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent">
            <TextView
                android:id="@+id/dialog_confirmation_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_4"
                style="@style/IndespensaHeading2"
                android:gravity="center"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible"
                tools:text="Confirma?"/>
            <TextView
                android:id="@+id/dialog_confirmation_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_2"
                style="@style/IndespensaText"
                android:gravity="center"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/dialog_confirmation_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:visibility="visible"
                tools:text="Confirma?"/>
            <ImageView
                android:id="@+id/dialog_confirmation_image"
                android:layout_width="128dp"
                android:layout_height="104dp"
                android:scaleType="centerCrop"
                android:visibility="gone"
                android:layout_marginTop="@dimen/margin_2"
                app:layout_constraintTop_toBottomOf="@id/dialog_confirmation_description"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:visibility="visible"
                tools:src="@drawable/image_alternative"/>
            <View
                android:id="@+id/divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                android:layout_marginTop="@dimen/margin_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dialog_confirmation_image" />
            <Button
                android:id="@+id/dialog_confirmation_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_terciary_background"
                android:enabled="true"
                android:fontFamily="@font/montserrat"
                android:maxLines="1"
                android:textAllCaps="true"
                android:textColor="@color/red"
                android:textStyle="bold"
                app:backgroundTint="@null"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider"
                tools:text="Confirmar"/>
            <View
                android:id="@+id/divider1"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dialog_confirmation_confirm" />
            <Button
                android:id="@+id/dialog_confirmation_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_terciary_background"
                android:enabled="true"
                android:fontFamily="@font/montserrat"
                android:text="@string/cta_cancel"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:backgroundTint="@null"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider1" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>
