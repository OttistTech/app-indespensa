<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_1"
        app:cardCornerRadius="4dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/alertRed"
            android:paddingHorizontal="@dimen/padding_4"
            android:paddingVertical="@dimen/padding_2">
            <TextView
                android:id="@+id/card_close_validity_product"
                android:layout_width="176dp"
                android:layout_height="wrap_content"
                android:theme="@style/IndespensaHeading5"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Nome do produto prÃ³ximo da validade"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/card_close_validity_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/IndespensaText"
                android:textSize="@dimen/text_small"
                tools:text="200g"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/card_close_validity_product"
                app:layout_constraintEnd_toStartOf="@id/card_close_validity_date"/>
            <TextView
                android:id="@+id/card_close_validity_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/IndespensaHeading5"
                android:textColor="@color/red"
                tools:text="28/10/2024"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>