<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <TextView
            android:id="@+id/ingredient_amount"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            tools:text="250g"
            android:theme="@style/IndespensaHeading4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="@dimen/margin_4"
            android:layout_marginVertical="@dimen/margin_2" />
        <TextView
            android:id="@+id/ingredient_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Arroz"
            android:theme="@style/IndespensaText"
            app:layout_constraintStart_toEndOf="@id/ingredient_amount"
            app:layout_constraintTop_toTopOf="@id/ingredient_amount"
            app:layout_constraintBottom_toBottomOf="@id/ingredient_amount"
            app:layout_constraintEnd_toStartOf="@id/ingredient_required_icon"
            android:layout_marginStart="16dp"
            app:layout_constraintHorizontal_bias="0"/>
        <ImageView
            android:id="@+id/ingredient_required_icon"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_required"
            app:layout_constraintEnd_toStartOf="@id/ingredient_icon"
            app:layout_constraintTop_toTopOf="@id/ingredient_name"
            app:layout_constraintBottom_toBottomOf="@id/ingredient_name"
            android:layout_marginEnd="@dimen/margin_4"/>
        <ImageView
            android:id="@+id/ingredient_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            tools:src="@drawable/ic_check"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/ingredient_name"
            app:layout_constraintBottom_toBottomOf="@id/ingredient_name"
            android:layout_marginEnd="@dimen/margin_4"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>