<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable name="model" type="com.ottistech.indespensa.ui.viewmodel.PantryFormViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:id="@+id/pantry_form_blur"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                style="@style/IndespensaBlur"
                android:elevation="7dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <ImageButton
                android:id="@+id/pantry_form_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow"
                android:elevation="8dp"
                android:outlineProvider="none"
                android:backgroundTint="@color/transparent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/margin_2"
                android:layout_marginStart="@dimen/margin_2"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/pantry_form_searchbar"
                android:layout_width="0dp"
                android:layout_height="@dimen/field_height"
                android:theme="@style/IndespensaTextInputLayout"
                app:boxStrokeWidth="@dimen/border_bold"
                app:endIconMode="custom"
                app:boxBackgroundColor="@color/white"
                android:elevation="8dp"
                app:endIconDrawable="@drawable/ic_search"
                app:layout_constraintTop_toTopOf="@id/pantry_form_back"
                app:layout_constraintStart_toEndOf="@id/pantry_form_back"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/margin_4"
                app:hintEnabled="false">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/pantry_form_searchbar_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:text="@={model.searchText}"
                    android:hint="@string/search_product"
                    android:textColorHint="@color/gray"
                    android:layout_gravity="bottom"
                    android:textSize="@dimen/text_regular"
                    android:paddingBottom="@dimen/padding_3" />
            </com.google.android.material.textfield.TextInputLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/pantry_form_product_result_list"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxHeight="192dp"
                android:elevation="8dp"
                android:visibility="gone"
                tools:visibility="gone"
                tools:listitem="@layout/card_product_search"
                tools:itemCount="5"
                app:layout_constraintStart_toStartOf="@id/pantry_form_searchbar"
                app:layout_constraintEnd_toEndOf="@id/pantry_form_searchbar"
                app:layout_constraintTop_toBottomOf="@id/pantry_form_searchbar"/>

            <ImageView
                android:id="@+id/pantry_form_image"
                android:layout_width="0dp"
                android:layout_height="@dimen/image_size_big"
                android:scaleType="centerCrop"
                android:src="@drawable/image_placeholder"
                android:clickable="@{model.formActiveState.imageUrl}"
                app:imageUrl="@{model.formState.imageUrl}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/pantry_form_scan_button"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:text="@string/cta_scan"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:elevation="6dp"
                app:backgroundTint="@color/secondary"
                app:icon="@drawable/ic_scanner"
                app:iconSize="20dp"
                app:iconTint="@color/white"
                android:backgroundTint="@null"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="@dimen/margin_6"
                android:layout_marginTop="250dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/pantry_form_scan_button"
                app:layout_constraintStart_toStartOf="@id/pantry_form_scan_button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginVertical="@dimen/margin_4"
                android:layout_marginEnd="@dimen/margin_6">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/field_height"
                    android:error="@{model.formErrorState.productName}"
                    android:theme="@style/IndespensaTextInputLayout"
                    app:boxStrokeWidth="@dimen/border_bold"
                    app:boxStrokeErrorColor="@color/red"
                    app:errorTextColor="@color/pastelOrange"
                    app:errorIconDrawable="@null">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/pantry_form_input_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@={model.formState.productName}"
                        android:enabled="@{model.formActiveState.productName}"
                        android:layout_gravity="bottom"
                        android:paddingBottom="@dimen/padding_3"
                        android:hint="@string/form_hint_name"
                        android:textSize="@dimen/margin_4"
                        android:inputType="text"/>
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{model.formErrorState.productName}"
                    android:visibility="@{model.formErrorState.productName != null ? View.VISIBLE : View.GONE}"
                    android:theme="@style/IndespensaFormErrorMessage"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/pantry_form_input_food_container"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/field_height"
                    android:error="@{model.formErrorState.foodName}"
                    android:layout_marginTop="4dp"
                    android:theme="@style/IndespensaTextInputLayout"
                    app:boxStrokeWidth="@dimen/border_bold"
                    app:boxStrokeErrorColor="@color/red"
                    app:errorTextColor="@color/pastelOrange"
                    app:errorIconDrawable="@null">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/pantry_form_input_food"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@={model.formState.foodName}"
                        android:enabled="@{model.formActiveState.foodName}"
                        android:layout_gravity="bottom"
                        android:paddingBottom="@dimen/padding_3"
                        android:hint="@string/form_hint_food"
                        android:textSize="@dimen/margin_4"
                        android:inputType="text"/>
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{model.formErrorState.foodName}"
                    android:visibility="@{model.formErrorState.foodName != null ? View.VISIBLE : View.GONE}"
                    android:theme="@style/IndespensaFormErrorMessage"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/pantry_form_input_category_select_container"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/field_height"
                    android:error="@{model.formErrorState.category}"
                    android:layout_marginTop="4dp"
                    android:hint="@string/form_hint_category"
                    android:theme="@style/IndespensaTextInputLayoutDropdown"
                    app:boxStrokeWidth="@dimen/border_bold"
                    app:boxStrokeErrorColor="@color/red"
                    app:errorTextColor="@color/pastelOrange"
                    app:errorIconDrawable="@null">
                    <AutoCompleteTextView
                        android:id="@+id/pantry_form_input_category_select"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@={model.formState.category}"
                        android:enabled="@{model.formActiveState.category}"
                        android:layout_gravity="bottom"
                        android:paddingBottom="@dimen/padding_3"
                        android:dropDownAnchor="@id/pantry_form_input_category_select"
                        android:dropDownHeight="200dp"
                        android:inputType="none"
                        android:fontFamily="@font/montserrat_medium"
                        tools:ignore="LabelFor" />
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{model.formErrorState.category}"
                    android:visibility="@{model.formErrorState.category != null ? View.VISIBLE : View.GONE}"
                    android:theme="@style/IndespensaFormErrorMessage"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/pantry_form_input_description_container"
                    android:layout_width="match_parent"
                    android:layout_height="104dp"
                    android:error="@{model.formErrorState.description}"
                    android:layout_marginTop="4dp"
                    android:theme="@style/IndespensaTextInputLayout"
                    app:boxStrokeWidth="@dimen/border_bold"
                    app:boxStrokeErrorColor="@color/red"
                    app:errorTextColor="@color/pastelOrange"
                    app:errorIconDrawable="@null">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/pantry_form_input_description"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/textarea_height"
                        android:text="@={model.formState.description}"
                        android:enabled="@{model.formActiveState.description}"
                        android:gravity="top|start"
                        android:scrollbars="vertical"
                        android:maxLines="5"
                        android:inputType="textMultiLine"
                        android:background="@null"
                        android:padding="@dimen/padding_4"
                        android:hint="@string/form_hint_description"
                        android:textSize="@dimen/margin_4" />
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{model.formErrorState.description}"
                    android:visibility="@{model.formErrorState.description != null ? View.VISIBLE : View.GONE}"
                    android:theme="@style/IndespensaFormErrorMessage"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/pantry_form_input_brand_container"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/field_height"
                    android:error="@{model.formErrorState.brandName}"
                    android:layout_marginTop="4dp"
                    android:theme="@style/IndespensaTextInputLayout"
                    app:boxStrokeWidth="@dimen/border_bold"
                    app:boxStrokeErrorColor="@color/red"
                    app:errorTextColor="@color/pastelOrange"
                    app:errorIconDrawable="@null">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/pantry_form_input_brand"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@={model.formState.brandName}"
                        android:enabled="@{model.formActiveState.brandName}"
                        android:layout_gravity="bottom"
                        android:paddingBottom="@dimen/padding_3"
                        android:hint="@string/form_hint_brand"
                        android:textSize="@dimen/margin_4"
                        android:inputType="text"/>
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{model.formErrorState.brandName}"
                    android:visibility="@{model.formErrorState.brandName != null ? View.VISIBLE : View.GONE}"
                    android:theme="@style/IndespensaFormErrorMessage"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_1"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:orientation="vertical">
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/pantry_form_input_amount_container"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/field_height"
                            android:error="@{model.formErrorState.amount}"
                            android:theme="@style/IndespensaTextInputLayout"
                            app:boxStrokeWidth="@dimen/border_bold"
                            app:boxStrokeErrorColor="@color/red"
                            app:errorTextColor="@color/pastelOrange"
                            app:errorIconDrawable="@null">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/pantry_form_input_amount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@={model.formState.amount}"
                                android:enabled="@{model.formActiveState.amount}"
                                android:layout_gravity="bottom"
                                android:paddingBottom="@dimen/padding_3"
                                android:hint="@string/form_hint_amount"
                                android:textSize="@dimen/margin_4"
                                android:inputType="numberDecimal"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        <TextView
                            android:id="@+id/pantry_form_input_amount_error"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{model.formErrorState.amount}"
                            android:visibility="@{model.formErrorState.amount != null ? View.VISIBLE : View.GONE}"
                            android:theme="@style/IndespensaFormErrorMessage"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:orientation="vertical"
                        android:layout_marginStart="@dimen/margin_2">
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/pantry_form_input_unit_select_container"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/field_height"
                            android:error="@{model.formErrorState.unit}"
                            android:hint="@string/form_hint_unit"
                            android:theme="@style/IndespensaTextInputLayoutDropdown"
                            app:boxStrokeWidth="@dimen/border_bold"
                            app:boxStrokeErrorColor="@color/red"
                            app:errorTextColor="@color/pastelOrange"
                            app:errorIconDrawable="@null">
                            <AutoCompleteTextView
                                android:id="@+id/pantry_form_input_unit_select"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@={model.formState.unit}"
                                android:enabled="@{model.formActiveState.unit}"
                                android:layout_gravity="bottom"
                                android:dropDownAnchor="@id/pantry_form_input_unit_select"
                                android:dropDownHeight="148dp"
                                android:fontFamily="@font/montserrat_medium"
                                android:inputType="none"
                                android:paddingBottom="@dimen/padding_3"
                                tools:ignore="LabelFor" />
                        </com.google.android.material.textfield.TextInputLayout>
                        <TextView
                            android:id="@+id/pantry_form_input_unit_select_error"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{model.formErrorState.unit}"
                            android:visibility="@{model.formErrorState.unit != null ? View.VISIBLE : View.GONE}"
                            android:theme="@style/IndespensaFormErrorMessage"/>
                    </LinearLayout>
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/pantry_form_input_validity_date_container"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/field_height"
                    android:error="@{model.formErrorState.validityDate}"
                    android:layout_marginTop="4dp"
                    android:theme="@style/IndespensaTextInputLayout"
                    app:boxStrokeWidth="@dimen/border_bold"
                    app:boxStrokeErrorColor="@color/red"
                    app:errorTextColor="@color/pastelOrange"
                    app:errorIconDrawable="@null"
                    app:endIconMode="custom"
                    app:endIconDrawable="@drawable/ic_calendar">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/pantry_form_input_validity_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@={model.formState.validityDate}"
                        android:layout_gravity="bottom"
                        android:paddingBottom="@dimen/padding_3"
                        android:hint="@string/form_hint_validity_date"
                        android:textSize="@dimen/text_regular"
                        android:inputType="date"
                        android:focusable="false"
                        android:clickable="true" />
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{model.formErrorState.validityDate}"
                    android:visibility="@{model.formErrorState.validityDate != null ? View.VISIBLE : View.GONE}"
                    android:theme="@style/IndespensaFormErrorMessage"/>
                <Button
                    android:id="@+id/pantry_form_button_submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/IndespensaButton.primary"
                    android:onClick="@{() -> model.submit()}"
                    android:enabled="@{model.isFormValid &amp;&amp; !model.isLoading}"
                    android:text="@string/cta_save"
                    android:layout_marginBottom="@dimen/margin_2"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>