<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/margin_2"
    android:background="@color/transparent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:background="@drawable/card_item_background"
        android:padding="0dp">
        <ImageView
            android:id="@+id/card_recipe_item_image"
            android:layout_width="104dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/image_alternative" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:padding="@dimen/margin_3"
            app:layout_constraintStart_toEndOf="@id/card_recipe_item_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <TextView
                android:id="@+id/card_recipe_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/IndespensaHeading4"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Título"/>
            <TextView
                android:id="@+id/card_recipe_item_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/IndespensaText"
                android:textSize="@dimen/text_small"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="Descrição extremamente interessante e encantadora"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_1">
                <TextView
                    android:id="@+id/card_recipe_item_ingredients_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/IndespensaText"
                    android:textSize="@dimen/text_small"
                    tools:textColor="@color/green"
                    tools:text="5/5 Ingr."/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="@dimen/margin_4">
                    <ImageView
                        android:id="@+id/card_recipe_item_level_icon"
                        android:layout_width="12dp"
                        android:layout_height="match_parent"
                        android:scaleType="center"
                        tools:src="@drawable/ic_easy"/>
                    <TextView
                        android:id="@+id/card_recipe_item_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_1"
                        style="@style/IndespensaText"
                        android:textSize="@dimen/text_small"
                        tools:textColor="@color/green"
                        tools:text="Fácil"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="@dimen/margin_4">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:scaleType="center"
                        android:src="@drawable/ic_time"/>
                    <TextView
                        android:id="@+id/card_recipe_item_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/IndespensaText"
                        android:textSize="@dimen/text_small"
                        android:textColor="@color/green"
                        tools:text="100min"/>
                </LinearLayout>
            </LinearLayout>

            <RatingBar
                android:id="@+id/card_recipe_item_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:layout_marginTop="@dimen/margin_1"
                android:progressTint="@color/secondary"
                tools:rating="4.5"
                style="@style/Widget.AppCompat.RatingBar.Small"
                />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>