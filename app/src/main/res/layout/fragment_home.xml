<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/home_scroll"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.fragment.HomeFragment"
            android:backgroundTint="@color/white">
            <TextView
                android:id="@+id/home_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/IndespensaHeading2"
                android:text="@string/pantry"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/margin_4"
                android:layout_marginStart="@dimen/margin_4"/>
            <LinearLayout
                android:id="@+id/home_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/home_title"
                android:layout_marginHorizontal="@dimen/margin_4"
                android:layout_marginTop="@dimen/margin_4">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/home_dashboard_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">
                    <ImageView
                        android:id="@+id/home_dashboard_feedback_logo"
                        android:layout_width="62dp"
                        android:layout_height="73dp"
                        android:scaleType="centerCrop"
                        tools:src="@drawable/logo_small_sad"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />
                    <TextView
                        android:id="@+id/home_dashboard_feedback_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:theme="@style/IndespensaHeading3"
                        android:textAlignment="center"
                        android:textColor="@color/gray"
                        app:layout_constraintTop_toBottomOf="@id/home_dashboard_feedback_logo"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginHorizontal="@dimen/margin_8"
                        android:layout_marginTop="@dimen/padding_2"
                        tools:text="Ops! Não foi possível carregar o Dashboard." />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <LinearLayout
                    android:id="@+id/home_dashboard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/home_dashboard_box1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:background="@drawable/dash_background"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/home_big_number_data1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5"
                            android:fontFamily="@font/montserrat_semibold"
                            android:textColor="@color/secondary"
                            android:textSize="@dimen/text_title_4"
                            android:textAlignment="center"
                            android:maxLines="1"
                            tools:text="76" />
                        <TextView
                            android:id="@+id/home_big_number_label1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_5"
                            android:theme="@style/IndespensaHeading4"
                            android:textAlignment="center"
                            android:maxLines="2"
                            android:layout_marginHorizontal="@dimen/margin_1"
                            tools:text="Itens na despensa" />
                    </LinearLayout>
                    <Space
                        android:layout_width="@dimen/margin_1"
                        android:layout_height="match_parent" />
                    <LinearLayout
                        android:id="@+id/home_dashboard_box2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:background="@drawable/dash_background"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/home_big_number_data2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5"
                            android:fontFamily="@font/montserrat_semibold"
                            android:textColor="@color/secondary"
                            android:textSize="@dimen/text_title_4"
                            android:textAlignment="center"
                            android:maxLines="1"
                            tools:text="12/10" />
                        <TextView
                            android:id="@+id/home_big_number_label2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_5"
                            android:theme="@style/IndespensaHeading4"
                            android:layout_marginHorizontal="@dimen/margin_1"
                            android:textAlignment="center"
                            android:maxLines="2"
                            tools:text="Última compra" />
                    </LinearLayout>
                    <Space
                        android:layout_width="@dimen/margin_1"
                        android:layout_height="match_parent" />
                    <LinearLayout
                        android:id="@+id/home_dashboard_box3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/dash_background"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="@dimen/padding_3"
                            android:paddingVertical="@dimen/padding_4">
                            <TextView
                                android:id="@+id/home_big_number_data3"
                                android:layout_width="28dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_semibold"
                                android:textColor="@color/secondary"
                                android:textSize="@dimen/text_title_1"
                                android:textAlignment="center"
                                android:maxLines="1"
                                tools:text="32" />
                            <TextView
                                android:id="@+id/home_big_number_label3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:theme="@style/IndespensaHeading5"
                                android:maxLines="2"
                                android:layout_marginStart="@dimen/margin_1"
                                tools:text="Próximos do vencimento" />
                        </LinearLayout>
                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/margin_1" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/dash_background"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="@dimen/padding_3"
                            android:paddingVertical="@dimen/padding_4">
                            <TextView
                                android:id="@+id/home_big_number_data4"
                                android:layout_width="28dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_semibold"
                                android:textColor="@color/secondary"
                                android:textSize="@dimen/text_title_1"
                                android:textAlignment="center"
                                android:maxLines="1"
                                tools:text="89" />
                            <TextView
                                android:id="@+id/home_big_number_label4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:theme="@style/IndespensaHeading5"
                                android:maxLines="2"
                                android:layout_marginStart="@dimen/margin_1"
                                tools:text="Receitas possíveis" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <Button
                    android:id="@+id/home_access_pantry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/IndespensaButton.primary"
                    android:text="@string/home_access_pantry"
                    app:layout_constraintTop_toBottomOf="@id/home_dashboard"
                    app:layout_constraintEnd_toEndOf="@id/home_dashboard"
                    app:layout_constraintStart_toStartOf="@id/home_dashboard"/>
                <LinearLayout
                    android:id="@+id/home_close_validity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/home_access_pantry"
                    app:layout_constraintStart_toStartOf="@id/home_access_pantry"
                    app:layout_constraintEnd_toEndOf="@id/home_access_pantry"
                    android:layout_marginTop="@dimen/margin_4">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/close_validity"
                        style="@style/IndespensaSectionTitle" />
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/home_close_validity_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:listitem="@layout/card_close_validity"
                        tools:itemCount="3"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/home_close_validity"
                    app:layout_constraintStart_toStartOf="@id/home_access_pantry"
                    app:layout_constraintEnd_toEndOf="@id/home_access_pantry"
                    android:layout_marginTop="@dimen/margin_4"
                    android:gravity="center_horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/recommended_recipes"
                        style="@style/IndespensaSectionTitle" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/recommended_recipes_description"
                        style="@style/IndespensaText"
                        android:textSize="@dimen/text_small"/>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/home_recipe_search_container"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/field_height"
                        android:theme="@style/IndespensaTextInputLayout"
                        app:boxStrokeWidth="@dimen/border_bold"
                        app:endIconMode="custom"
                        android:focusable="false"
                        android:clickable="true"
                        app:endIconDrawable="@drawable/ic_search"
                        android:layout_marginTop="@dimen/margin_2">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/home_recipe_search"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:paddingBottom="@dimen/padding_3"
                            android:focusable="false"
                            android:clickable="true"
                            android:hint="@string/search_recipe"
                            android:textSize="16sp"
                            android:inputType="text"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/home_recipe_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/margin_2"
                        android:nestedScrollingEnabled="false"
                        tools:listitem="@layout/card_recipe_item"
                        tools:itemCount="10"/>
                    <TextView
                        android:id="@+id/home_recipe_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        tools:text="Text Message"
                        android:theme="@style/IndespensaHeading3"
                        android:textColor="@color/gray"
                        android:textAlignment="center"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="@dimen/margin_8"
                        android:layout_marginHorizontal="@dimen/margin_8"/>
                    <ProgressBar
                        android:id="@+id/home_recipe_progressbar"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:visibility="gone"
                        android:indeterminateBehavior="repeat"
                        android:indeterminateTint="@color/secondary"
                        android:layout_marginTop="@dimen/margin_2"/>
                </LinearLayout>
            </LinearLayout>
            <ProgressBar
                android:id="@+id/home_progressbar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:indeterminateBehavior="repeat"
                android:indeterminateTint="@color/secondary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/home_title"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/home_fab"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:clickable="true"
        app:icon="@drawable/ic_add"
        app:iconTint="@color/white"
        android:text="@string/recipe"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:fontFamily="@font/montserrat_medium"
        app:shapeAppearanceOverlay="@style/IndespensaRoundedFab"
        app:backgroundTint="@color/secondary"
        app:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp" />
</androidx.constraintlayout.widget.ConstraintLayout>