<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/recipe_form_image"
            android:layout_width="0dp"
            android:layout_height="272dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        
        <LinearLayout
            android:id="@+id/recipe_form_general_information"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/recipe_form_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recipe_general_information"
                style="@style/IndespensaSectionTitle" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/recipe_form_input_name_container"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="4dp"
                android:theme="@style/IndespensaTextInputLayout"
                app:boxStrokeWidth="2dp"
                app:boxStrokeErrorColor="@color/red"
                app:errorTextColor="@color/pastelOrange"
                app:errorIconDrawable="@null">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/recipe_form_input_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:paddingBottom="12dp"
                    android:hint="@string/form_hint_name"
                    android:textSize="16sp"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/recipe_form_input_name_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:theme="@style/IndespensaFormErrorMessage"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/recipe_form_input_description_container"
                android:layout_width="match_parent"
                android:layout_height="104dp"
                android:layout_marginTop="4dp"
                android:theme="@style/IndespensaTextInputLayout"
                app:boxStrokeWidth="2dp"
                app:boxStrokeErrorColor="@color/red"
                app:errorTextColor="@color/pastelOrange"
                app:errorIconDrawable="@null">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/recipe_form_input_description"
                    android:layout_width="match_parent"
                    android:layout_height="96dp"
                    android:gravity="top|start"
                    android:scrollbars="vertical"
                    android:maxLines="5"
                    android:inputType="textMultiLine"
                    android:background="@null"
                    android:padding="16dp"
                    android:hint="@string/form_hint_description"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/recipe_form_input_description_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:theme="@style/IndespensaFormErrorMessage"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:baselineAligned="false">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/recipe_form_input_time_container"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="5"
                    android:theme="@style/IndespensaTextInputLayout"
                    app:boxStrokeWidth="2dp"
                    app:boxStrokeErrorColor="@color/red"
                    app:errorTextColor="@color/pastelOrange"
                    app:errorIconDrawable="@null">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/recipe_form_input_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:paddingBottom="12dp"
                        android:hint="@string/form_hint_time"
                        android:textSize="16sp"
                        android:inputType="numberDecimal"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/recipe_form_select_level_container"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="5"
                    android:layout_marginStart="8dp"
                    android:hint="@string/form_hint_level"
                    android:theme="@style/IndespensaTextInputLayoutDropdown"
                    app:boxStrokeWidth="2dp"
                    app:boxStrokeErrorColor="@color/red"
                    app:errorTextColor="@color/pastelOrange"
                    app:errorIconDrawable="@null">

                    <AutoCompleteTextView
                        android:id="@+id/recipe_form_select_level"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:dropDownAnchor="@id/recipe_form_select_level"
                        android:dropDownHeight="148dp"
                        android:fontFamily="@font/montserrat_medium"
                        android:inputType="none"
                        android:paddingBottom="12dp"
                        tools:ignore="LabelFor" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/recipe_form_input_time_error"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:visibility="gone"
                    android:theme="@style/IndespensaFormErrorMessage"/>
                <TextView
                    android:id="@+id/recipe_form_select_level_error"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:layout_marginStart="8dp"
                    android:visibility="gone"
                    android:theme="@style/IndespensaFormErrorMessage"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/recipe_form_ingredients"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/recipe_form_general_information"
            app:layout_constraintStart_toStartOf="@+id/recipe_form_general_information"
            app:layout_constraintEnd_toEndOf="@+id/recipe_form_general_information"
            android:layout_marginTop="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recipe_ingredients"
                style="@style/IndespensaSectionTitle" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recipe_form_ingredients_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                tools:listitem="@layout/card_ingredient" />
            <Button
                android:id="@+id/recipe_form_add_ingredient_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/button_tertiary_background"
                android:backgroundTint="@color/transparent"
                android:enabled="true"
                android:fontFamily="@font/montserrat"
                android:text="@string/add_ingredient"
                android:textAllCaps="true"
                android:textColor="@color/primary"
                android:textStyle="bold"
                app:backgroundTint="@null" />
            <TextView
                android:id="@+id/recipe_form_ingredients_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:visibility="gone"
                android:theme="@style/IndespensaFormErrorMessage"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/recipe_form_preparation_method"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/recipe_form_ingredients"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recipe_preparation_method"
                style="@style/IndespensaSectionTitle" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/recipe_form_preparation_method_input_container"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginTop="4dp"
                android:theme="@style/IndespensaTextInputLayout"
                app:boxStrokeWidth="2dp"
                app:boxStrokeErrorColor="@color/red"
                app:errorTextColor="@color/pastelOrange"
                app:errorIconDrawable="@null">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/recipe_form_preparation_method_input"
                    android:layout_width="match_parent"
                    android:layout_height="152dp"
                    android:gravity="top|start"
                    android:scrollbars="vertical"
                    android:maxLines="5"
                    android:inputType="textMultiLine"
                    android:background="@null"
                    android:padding="16dp"
                    android:hint="@string/form_hint_preparation_method"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/recipe_form_preparation_method_input_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:theme="@style/IndespensaFormErrorMessage"/>
        </LinearLayout>

        <Button
            android:id="@+id/recipe_form_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:background="@drawable/button_primary_background"
            app:backgroundTint="@null"
            android:text="@string/cta_save"
            android:fontFamily="@font/montserrat"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/recipe_form_preparation_method"
            app:layout_constraintStart_toStartOf="@id/recipe_form_preparation_method"
            app:layout_constraintTop_toBottomOf="@id/recipe_form_preparation_method"
            android:enabled="true"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>