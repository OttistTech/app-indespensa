<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.InDespensa" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/primary</item>
    </style>

    <style name="Theme.InDespensa" parent="Base.Theme.InDespensa" />

    <!--  Splash Screen Theme Configurations  -->
    <style name="IndespensaSplashScreen" parent="Theme.SplashScreen.IconBackground">
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@drawable/logo_white_with_background</item>
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/secondary</item>
        <item name="windowSplashScreenAnimationDuration">2000</item>
        <item name="postSplashScreenTheme">@style/Theme.InDespensa</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/gray</item>
        <item name="hintTextColor">@color/gray</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="CustomTextInputLayoutDropdown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/gray</item>
        <item name="hintTextColor">@color/gray</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="IndespensaText">
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="IndespensaFormErrorMessage" parent="IndespensaText">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="IndespensaHeading1" parent="IndespensaText">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomButtonStyle" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/button_border_red</item>
        <item name="android:backgroundTint">@null</item>
    </style>

</resources>