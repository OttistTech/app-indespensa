<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.InDespensa" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/primary</item>
    </style>

    <style name="Theme.InDespensa" parent="Base.Theme.InDespensa" />

    <!--  Splash Screen Theme Configurations  -->
    <style name="IndespensaSplashScreen" parent="Theme.SplashScreen.IconBackground">
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@drawable/white_logo_with_background</item>
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/secondary</item>
        <item name="windowSplashScreenAnimationDuration">2000</item>
        <item name="postSplashScreenTheme">@style/Theme.InDespensa</item>
    </style>
</resources>