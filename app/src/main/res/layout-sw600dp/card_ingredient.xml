<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <TextView
            android:id="@+id/ingredient_amount"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/margin_2"
            android:layout_marginStart="60dp"
            android:theme="@style/IndespensaHeading4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.625"
            tools:text="250g" />

        <TextView
            android:id="@+id/ingredient_name"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:theme="@style/IndespensaText"
            app:layout_constraintBottom_toBottomOf="@id/ingredient_amount"
            app:layout_constraintEnd_toStartOf="@+id/ingredient_required_icon"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/ingredient_amount"
            app:layout_constraintTop_toTopOf="@id/ingredient_amount"
            tools:text="Arroz" />

        <ImageView
            android:id="@+id/ingredient_required_icon"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginStart="32dp"
            android:src="@drawable/ic_required"
            app:layout_constraintBottom_toBottomOf="@id/ingredient_name"
            app:layout_constraintEnd_toStartOf="@+id/ingredient_icon"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/ingredient_name"
            app:layout_constraintTop_toTopOf="@id/ingredient_name"
            app:layout_constraintVertical_bias="0.4" />

        <ImageView
            android:id="@+id/ingredient_icon"
            android:layout_width="23dp"
            android:layout_height="15dp"
            android:layout_marginStart="32dp"
            app:layout_constraintBottom_toBottomOf="@id/ingredient_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/ingredient_required_icon"
            app:layout_constraintTop_toTopOf="@id/ingredient_name"
            app:layout_constraintVertical_bias="0.428"
            tools:src="@drawable/ic_check" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>